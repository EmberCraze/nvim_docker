FROM python:3.7.16-bullseye

RUN apt-get update && \
    apt-get install -y curl \
    git \
    gdb \
    xclip \
    ripgrep \
    sudo \
    gdu

RUN useradd --create-home --shell /bin/bash --group sudo dev
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> \
/etc/sudoers

WORKDIR /tmp

# Get upgraded node (This is needed for pyright)
RUN curl -sL https://deb.nodesource.com/setup_16.x | bash -
RUN apt-get update && apt-get install -y nodejs

# Install latest nvim
RUN curl -Lo nvim-linux64.deb https://github.com/neovim/neovim/releases/download/stable/nvim-linux64.deb
RUN apt-get install ./nvim-linux64.deb

# Lazy git
RUN LAZYGIT_VERSION=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | grep '"tag_name":' |  sed -E 's/.*"v*([^"]+)".*/\1/') && \
    curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/latest/download/lazygit_${LAZYGIT_VERSION}_Linux_x86_64.tar.gz" && \
    tar xf lazygit.tar.gz -C /usr/bin lazygit

RUN BOTTOM_VERSION=$(curl -s "https://api.github.com/repos/ClementTsang/bottom/releases/latest" | grep '"tag_name":' |  sed -E 's/.*"v*([^"]+)".*/\1/') && \
    curl -Lo  bottom_amd64.deb  "https://github.com/ClementTsang/bottom/releases/download/0.6.8/bottom_${BOTTOM_VERSION}_amd64.deb" && \
    apt-get install ./bottom_amd64.deb

# Authorize SSH Host
RUN mkdir -p /root/.ssh && \
    chmod 0700 /root/.ssh && \
    ssh-keyscan github.com > /root/.ssh/known_hosts

# Add the keys and set permissions
ADD ./certs/ssh /root/.ssh/
COPY ./compose/local/django/ssh_config /root/.ssh/config
RUN chmod -R 600 /root/.ssh/

# Requirements are installed here to ensure they will be cached.
COPY ./requirements /requirements
RUN pip install -r /requirements/local.txt
RUN pip install django-stubs==1.13.1 \
django-stubs-ext==0.7.0

# Set neovim as the default editor
ENV EDITOR=nvim

WORKDIR /home/dev
USER dev

RUN mkdir /home/dev/.config/ && mkdir /home/dev/.config/nvim
RUN git clone https://github.com/AstroNvim/AstroNvim ~/.config/nvim

# for partial caching
ARG CACHE_DATE=2018-11-28

WORKDIR /home/dev/.config/nvim/lua
RUN git clone https://github.com/EmberCraze/astrovim_config.git temp
RUN mv temp/user .
RUN rm -r temp
RUN nvim --headless -c "autocmd User PackerComplete quitall"
RUN nvim --headless -c "autocmd User LspInstall pyright" -c "quitall"

#RUN git clone https://github.com/EmberCraze/nvim.git /home/dev/.config/nvim
# TODO instead of copying over pre installed values, do the installation in docker so that it becomes cached
#COPY ./.local .local
#RUN sudo chown dev -R .local
#RUN sudo chown dev -R .config

WORKDIR /home/dev/gigapay_dev

CMD ["nvim", "."]
